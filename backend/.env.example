# -----------------------------
# .env.example - NO colocar secretos reales aquí
# Copiar a .env y rellenar valores en tu entorno local o en el servidor
# -----------------------------

# Database
DATABASE_HOST=
DATABASE_PORT=3306
DATABASE_USER=
DATABASE_PASSWORD=
DATABASE_NAME=

# Server
PORT=3000

# JWT
JWT_SECRET=
JWT_EXPIRES=2h
JWT_REFRESH_EXPIRES=7d

# CORS: lista separada por comas de orígenes permitidos en producción
CORS_ORIGINS=http://localhost:4200

# Redis (opcional) para almacenar refresh tokens / blacklist
REDIS_URL=

# Logging
LOG_LEVEL=info

# Google AI / Gemini (opcional)
GOOGLE_API_KEY=
GOOGLE_GEMINI_MODEL=

# Gmail bot (opcional)
CLIENT_ID=
CLIENT_SECRET=
REDIRECT_URI=
REFRESH_TOKEN=
